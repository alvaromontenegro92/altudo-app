@{
    ViewData["Title"] = "Concluído!";
    string subTitle = ViewBag.SubTitle.ToString();
    List<Uri> images = (List<Uri>)ViewBag.Images;
    List<object[]> words = (List<object[]>)ViewBag.Words;
}
<h1 class="h1 text-success">@ViewData["Title"]</h1>
<p class="p-0">WebSite: <strong>@subTitle</strong></p>
<br />

<div class="container form-group">
    <div class="form-row">
        <div class="col-sm border">
            <div class="row align-content-center">
                <strong>Top 10 palavras mais utilizadas:</strong>
            </div>
            <div class="row">
                @{
                    var counter = 1;
                    foreach (var word in words)
                    {
                        <div>@counter - @word[0].ToString()</div>
                        counter += 1;
                    }
                }
            </div>
        </div>
        <div class="col-sm border">
            <div class="row align-content-center">
                <strong>Imagens encontradas:</strong>
            </div>
            <div class="row">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="@images[0].AbsoluteUri" alt="First slide">
                        </div>

                        @foreach (var image in images)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@image.AbsoluteUri" alt="First slide">
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>    
</div>
